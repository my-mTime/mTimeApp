<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/match_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_hopointti_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电影商城"
            android:textColor="#000000"
            android:textSize="17sp"></TextView>

        <TextView
            android:id="@+id/tv_hopointti_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/home_hotplay_right_arrow"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="全部商品"
            android:textColor="#ff8600"
            android:textSize="14sp"></TextView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22000000"></View>
</LinearLayout>
